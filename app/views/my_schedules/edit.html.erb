<% if current_user %>
  <h5><%= link_to "マイページへ戻る", user_path(current_user.id) %></h5>
<% else %>
  <h5><%= link_to "ホームへ戻る", root_path %></h5>
<% end %>
<div class="text-center">
  <%= form_with model: @schedule, url: my_schedule_path(@schedule), method: :patch, local: true do |f| %>
    <%= render 'shared/calendar_date', f: f %>
    <div class="row-eq-height">
      <div class="form-group col-md-6 mt-3 mx-auto">
        <%= f.submit "変更", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>
</div>