<% if wanted_spot_ids.include?(spot_id) %>
  <%= link_to "「行きたい」を取り消す",
    spot_wants_path(spot_id),
    method: :delete,
    remote: true,
    class: "btn btn-secondary spot-btn"
  %>
<% else %>
  <%= link_to "「行きたい」に追加する",
    spot_wants_path(spot_id),
    method: :post,
    remote: true,
    class: "btn btn-success spot-btn"
  %>
<% end %>