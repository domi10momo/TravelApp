<div class="row">
  <% @spots.each do |spot| %>
    <div class="col-12 col-md-6 col-lg-4 row-eq-height">
      <div class="card border-dark mb-3" style="margin: 1rem">
        <h3><%= spot.name %></h3>
        <div class="mx-1">
          <%= image_tag "/assets/#{spot.image}", :size => '300x300' %>
        </div>
        <p>エリア名：<%= spot.area.name %></p>
        <p><%= spot.description %></p>
        <%= link_to "詳細を確認する", spot_path(spot) %>
        <% if @travel_spot %>
          <div class="form-group col-md-6">
            <%= link_to "この場所を選択する",
              my_travel_course_path(params:{spot_id: spot, course_id: @travel_spot}),
              method: :patch
            %>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>
</div>