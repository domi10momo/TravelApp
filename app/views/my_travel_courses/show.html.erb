<div class="mx-5">
  <h4>日程： <%= @schedule.date %></h4>
  <% @course.each do |spot| %>
    <div class="row m-4">
      <h5><%= spot.order %>. <%= @spots.id_name(spot) %></h5>
      <div class="mx-3">
        <%= link_to "コースの修正", edit_my_travel_course_path(spot), class: "btn btn-secondary" %>
      </div>
      <% if @schedule.gone %>
        <%= link_to "感想の入力", new_impression_path(spot), class: "btn btn-secondary" %>
      <% end %>
    </div>
    <% if spot.fill_in_impression %>
      <textarea><%= Impression.find_by(my_schedule_id: @schedule.id, spot_id: spot.spot_id).text %></textarea>
      <%= image_tag Impression.find_by(my_schedule_id: @schedule.id, spot_id: spot.spot_id).image, :size => '150x150' %>
    <% end %>
  <% end %>
  <div>
    <%= button_to "旅行終了", my_travel_courses_gone_flag_path(@schedule), class: "btn btn-success" %>
  </div>
</div>