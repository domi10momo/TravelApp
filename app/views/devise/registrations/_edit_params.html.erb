<%= render "devise/shared/error_messages", resource: resource %>
<div class="field m-2">
  <%= f.label :nickname %><br />
  <%= f.text_field :nickname, autofocus: true, autocomplete: "nickname" %>
</div>
<div class="field m-2">
  <%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
</div>
<% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
  <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
<% end %>
<div class="field m-2">
  <%= f.label :password %> <i>(変更しない場合は空白のままにしてください。)</i><br />
  <%= f.password_field :password, autocomplete: "new-password" %>
  <% if @minimum_password_length %>
    <br />
    <em><%= @minimum_password_length %> 文字以上</em>
  <% end %>
</div>
<div class="field m-2">
  <%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
</div>
<div class="field m-2">
  <%= f.label :current_password %><i>(変更には現在のパスワードが必要です。)</i><br />
  <%= f.password_field :current_password, autocomplete: "current-password" %>
</div>
<div class="actions m-2">
  <%= f.submit "更新", class: "btn btn-success mx-2" %>
</div>