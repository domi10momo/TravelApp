<div class="mx-auto">
  <b><p><h5>
    日程：<%= schedule.date %>
    <button class="btn btn-info m-2 btn-sm" disabled >
      <% if schedule.gone %>
        旅行完了
      <% else %>
        旅行予定
      <% end %>
    </button>
  </h5></p></b>

  <% @my_schedules.route_order(schedule).each do |route_spot| %>
    <b><p><%= route_spot.order %>.  <%= route_spot.spot.name %></p></b>
  <% end %>
</div>