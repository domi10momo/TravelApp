<div class="container">
  <%= render 'shared/flash' %>
  <h2><%= current_user.nickname %>さんのマイページ</h2>
  
  <div class="row">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="text-center">
        <p><%= link_to "行きたい観光地を選択する", spots_path %></p>
      </div>
      <div class="overflow-auto card border-dark mb-3">
        <h3>行きたい観光地一覧</h3>
        <% @want_spots.each do |spot| %>
          <p><%= link_to spot.name,  spot_path(spot) %></p>
        <% end %>
      </div>
    </div>
  </div>
  <div class="row">
    <div class="col-12 col-md-6 col-lg-6">
      <div class="text-center">
        <h3>旅行予定一覧</h3>
        <p><%= link_to "モデルコースを選択する", model_courses_path %></p>
      </div>
      <div class="card border-dark mb-3 overflow-auto mx-auto"style="width:500px; height:400px;">
        <% @gone_false_schedules.each do |dont_gone_schedule| %>
          <%= render 'show_course', schedule: dont_gone_schedule %>
          <div>
            <%= link_to "日時の修正", edit_my_schedule_path(dont_gone_schedule.id) %>
            <%= link_to "コースの修正", "#" %>
            <%= link_to "予定の削除",
              my_schedule_path(dont_gone_schedule.id),
              method: :delete,
              data:{ confirm: "削除しますか？" }
            %>
          </div>
          <hr>
        <% end %>
      </div>
    </div>
    <div class="col-12 col-md-6 col-lg-6">
      <div class="text-center">
        <h3>行った旅行一覧</h3>
        <p>&nbsp;</p>
      </div>
      <div class="card border-dark mb-3 overflow-auto mx-auto"style="width:500px; height:400px;">
        <% @gone_true_schedules.each do |gone_schedule| %>
          <%= render 'show_course', schedule: gone_schedule %>
          <div>
            <%= link_to "記録の入力", my_travel_course_path(gone_schedule.id)%>
          </div>
          <hr>
        <% end %>
        </div>
      </div>
    </div>  
  </div>
</div>