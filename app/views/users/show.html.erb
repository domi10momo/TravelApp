<div class="text-center">
  <h2><%= current_user.nickname %>さんのマイページ</h2>
</div>

<div class="row">
  <%= render "want_spots_list", want_spots: @want_spots %>
</div>
<div class="row mt-4">
  <div class="col-12 col-sm-12 col-md-12 col-lg-6">
    <div class="text-center">
      <h3>旅行予定一覧</h3>
      <p><%= link_to "モデルコースを選択する", model_courses_path, class: "btn btn-success"%></p>
    </div>
    <div class="card border-dark mb-3 overflow-auto mx-auto" style="width:90%; height:70%;">
      <% @gone_false_schedules.each do |schedule| %>
        <%= render "show_course", schedule: schedule %>
        <%= render "plan_course_button", schedule: schedule %>
      <% end %>
      <div class="mt-3">
        <%= paginate @gone_false_schedules, param_name: "not_gone_page" %>
      </div>
    </div>
  </div>
  <div class="col-12 col-sm-12 col-md-12 col-lg-6">
    <div class="text-center m-1 mb-4">
      <h3>完了した旅行一覧</h3>
      <p>&nbsp;</p>
    </div>
    <div class="card border-dark mb-3 overflow-auto mx-auto" style="width:90%; height:70%;">
      <% @gone_true_schedules.each do |schedule| %>
        <%= render 'show_course', schedule: schedule %>
        <div class="mx-auto">
          <%= link_to "記録の入力", my_travel_course_path(schedule.id), class: "btn btn-secondary"%>
        </div>
        <hr>
      <% end %>
      <div class="mt-3">
        <%= paginate @gone_true_schedules, param_name: "gone_page" %>
      </div>
    </div>
  </div>  
</div>
