<div class="row">
  <div class="col-12 col-md-12 col-lg-4">
    <%= link_to 'モデルコースの例', model_courses_path, class: "btn btn-sm btn-secondary btn-width mt-5 mx-auto" %>
    <div class="text-center">
      <%= render 'model_courses/show_modelcourse_and_route', courses_in_area: @example_model_courses %>
    </div>
  </div>

  <div class="col-12 col-md-12 col-lg-4">
    <%= link_to '観光地の例', spots_path, class: "btn btn-sm btn-secondary btn-width mx-2 mt-5 mx-auto" %>
    <div class="text-center mt-3">
      <% @spots.each do |spot| %>
        <%= render 'shared/all_spots_list', spot: spot %>
      <% end %>
    </div>
  </div>

  <div class="col-12 col-md-12 col-lg-4">
    <%= link_to '感想の例', impressions_path, class: "btn btn-sm btn-secondary btn-width mx-2 mt-5 mx-auto" %>
    <div class="text-center mt-3">
      <%= render 'index_list' %>
    </div>
  </div>
</div>
