<div class="form-group row justify-content-center">
  <% if user_signed_in? %>
    <% if spot.wanted_by?(current_user) %>
      <%= link_to "「行きたい」を取り消す", spot_wants_path(spot), method: :delete, remote: true, class: "btn btn-success" %>
    <% else %>
      <%= link_to "「行きたい」リストに追加する", spot_wants_path(spot), method: :post, remote: true, class: "btn btn-success" %>
    <% end %>
  <% end %>
</div>