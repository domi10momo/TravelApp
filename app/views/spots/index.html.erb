<% if current_user %>
  <h5><%= link_to "マイページへ戻る", user_path(current_user.id) %></h5>
<% else %>
  <h5><%= link_to "ホームへ戻る", root_path %></h5>
<% end %>
<hr>
<div class="text-center mb-3">
  <h2>観光地一覧</h2>
</div>
<div class="row">
  <% @spots.each do |spot| %>
    <div class="col-12 col-md-6 col-lg-4 row-eq-height">
      <%= render 'spots/all_spots_list', spot: spot %>
    </div>
  <% end %>
</div>
